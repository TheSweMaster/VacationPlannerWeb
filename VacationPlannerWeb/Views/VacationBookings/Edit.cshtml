@model VacationBooking

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>VacationBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input asp-for="FromDate" class="form-control" onchange="FromDateValidation()" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" class="form-control" onchange="ToDateValidation()" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AbsenceType" class="control-label"></label>
                <select asp-for="AbsenceTypeId" class="form-control" asp-items="ViewBag.AbsenceTypes"></select>
                <span asp-validation-for="AbsenceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Approval" class="control-label"></label>
                <select asp-for="Approval" class="form-control" asp-items="ViewBag.ApprovalStates"></select>
                <span asp-validation-for="Approval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" disabled="@ViewBag.NotEditable"/>
                @if (ViewBag.NotEditable)
                {
                    <label>@ViewBag.NotEditableMessage</label>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/DatePickerLogic.js"></script>
}
