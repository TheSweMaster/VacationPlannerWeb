@model IEnumerable<WorkFreeDay>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a> | 
    <a class="btn btn-info" asp-controller="WorkFreeDays" asp-action="ImportSwedishWorkFreeDays" asp-route-year="@DateTime.Now.Year">Import Swedish Work-Free Days</a>
</p>

<table class="table" id="workfree-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a class="btn btn-default btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-default btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-default btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="~/js/TableSorting.js"></script>
}
